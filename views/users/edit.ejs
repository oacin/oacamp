<% include ../partials/header %>

<div class="row">
    <h1 style="text-align: center"><%= user.username %>'s profile</h1>
    <div style="width: 30%; margin: 25px auto;">
        <form action="/users/<%= user._id %>?_method=PUT" method="POST">
			<div class="form-group">
				<label for="avatar">Avatar URL</label>
                <input class="form-control" type="text" name="avatar" value="<%= user.avatar %>">
            </div>
			<div class="form-group">
				<label for="firstName">First Name</label>
                <input class="form-control" type="text" name="firstName" value="<%= user.firstName %>">
            </div>
			<div class="form-group">
				<label for="lastName">Last Name</label>
                <input class="form-control" type="text" name="lastName" value="<%= user.lastName %>">
            </div>
			<div class="form-group">
				<label for="email">Email</label>
                <input class="form-control" type="email" name="email" value="<%= user.email %>">
            </div>
            <div class="form-group">
                <button class="btn btn-lg btn-primary btn-block">Edit Profile</button>
            </div>
        </form>
        <a href="/users/<%= user._id %>">Go Back</a>
    </div>
</div>

<% include ../partials/footer %>