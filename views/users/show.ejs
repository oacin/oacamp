<% include ../partials/header %>

<div class="row">
	<div class="col-md-4">
			<h1><%= user.firstName + " " + user.lastName %></h1>
		<div class="thumbnail">
			<img src="<%= user.avatar %>" alt="user profile image" class="user-pic">
			<div class="caption"><a href="mailto:<%= user.email %>"><%= user.email %></a></div>
		</div>
		<% if(currentUser && currentUser._id.equals(user._id)){ %>
			<a href="/users/<%= user._id %>/edit" class="btn btn-xs btn-warning" style="display: block; margin: 10px 0px;">
				Edit Profile
