<% include ../partials/header %>

<div class="row">
	<h2 class="text-center">Add a new Campground!</h2>
	<div style="width: 30%; margin: 30px auto">
		<form action="/campgrounds" method="POST">
			<div class="form-group">
				<input class="form-control" type="text" name="name" placeholder="Campground Name">
			</div>
			<div class="form-group">
				<input class="form-control" type="text" name="image" placeholder="Campground Image URL">
			</div>
			<div class="form-group">
				<textarea class="form-control" name="description" placeholder="Description"></textarea>
			</div>
			<div class="form-group">
				<input class="form-control" type="number" name="price" placeholder="Price" min="0.01" step="0.01">
			</div>
			<div class="form-group">
				<button class="btn btn-large btn-primary btn-block">Add Campground</button>
			</div>
		</form>
		<a href="/campgrounds">Go Back</a>
	</div>
</div>

<% include ../partials/footer %>