<% include ../partials/header %>

<div class="row">
	<h2 class="text-center">Add new Comment to <%= campground.name %>!</h2>
	<div style="width: 30%; margin: 30px auto">
		<form action="/campgrounds/<%= campground._id %>/comments" method="POST">
			<div class="form-group">
				<textarea class="form-control" name="comment[text]" placeholder="Comment"></textarea>
			</div>
			<div class="form-group">
				<button class="btn btn-large btn-primary btn-block">Add Comment</button>
			</div>
		</form>
		<a href="/campgrounds">Go Back</a>
	</div>
</div>

<% include ../partials/footer %>